<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: "flex flex-col my-4 items-left"} ) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <br /><em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.select(:role, options_for_select(User::ROLES), html: {class: "text-left"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

