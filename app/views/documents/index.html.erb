<p style="color: green"><%= notice %></p>
<h1>Public Documents</h1>

<div id="documents">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>File</th>
        <th>Views</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @documents.each do |document| %>
      <%= render document %>
    <% end %>
    </tbody>
  </table>
</div>

<% if current_user.student? %>
  <h1>Folders</h1>
  
      <table>
          <thead>
          <tr>
              <th>Name</th>
              <th>Size</th>
              <th>Actions</th>
          </tr>
          </thead>
          <tbody>
            <% Folder.all.each do |folder| %>
          <%= render folder %>
  <% end %>
          </tbody>
      </table>

<% end %>

<% if current_user.teacher? %>
<h1>My Documents</h1>

<div id="my-documents">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>File</th>
        <th>Views</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @my_documents.each do |document| %>
      <%= render document %>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New document", new_document_path %>

<% end %>

