<tr id="<%= dom_id folder %>">
    <td><%= link_to folder.name, folder_path(folder) %></td>
    <td><%= folder.documents.count %> documents</td>
    <td>
        <% if policy(folder).edit? %>
        <%= link_to "Rename", edit_folder_path(folder) %>
        <% end %>
        &nbsp;
        <% if policy(folder).destroy? %>
        <%= link_to "Destroy", @folder, method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure? This will destroy all included documents, too.", "turbo-confirm": "Are you sure? This will destroy all included documents, too." }  %>
        <% end %>
    </td>
</tr>