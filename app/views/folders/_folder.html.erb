<tr id="<%= dom_id folder %>">
    <td><%= link_to folder.name, folder_path(folder) %></td>
    <td><%= folder.documents.count %> documents</td>
    <td>
        <% if policy(folder).edit? %>
        <%= link_to "Edit", edit_folder_path(folder) %>
        <% end %>
        &nbsp;
        <% if policy(folder).destroy? %>
        <%= link_to "Destroy", folder_path(folder), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
    </td>
</tr>