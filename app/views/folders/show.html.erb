<h2><%= @folder.name %></h2>
<h3>Documents</h3>
<ul>
<%= render :partial => "documents/document_file", collection: @folder.documents, as: :document %>
</ul>
<div class="my-3">
  <% if policy(Document).create? && current_user == @folder.user %>
    <%= link_to "Add a document", new_folder_document_path(@folder) %>
  <% end %>
  &nbsp;
  <% if policy(@folder).edit? %>
    <%= link_to "Rename this folder", edit_folder_path(@folder) %>
  <% end %>
  &nbsp;
  <% if policy(@folder).destroy? %>
    <%= link_to "Destroy this folder", @folder, method: :delete, data: { "turbo-method": :delete, confirm: "Are you sure? This will destroy all included documents, too.", "turbo-confirm": "Are you sure? This will destroy all included documents, too." } %>
  <% end %>

  <p><%= link_to "Back to folders", folders_path %></p>

</div>
